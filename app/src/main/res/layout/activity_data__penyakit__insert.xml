<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".AKTIVITY.Data_Penyakit_Insert">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:title="Tambah Data"
            app:titleTextColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="#f44336"
            app:elevation="4dp"
            app:popupTheme="@style/Base.ThemeOverlay.AppCompat.Dark" >

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:src="@drawable/ic_menu_gallery"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/imageView" />

            <TextView
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="Jenis Penyakit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

              <EditText
                  android:id="@+id/jenis_penyakit"

              android:hint="Jenis Penyakit"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:text="Gejala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:layout_marginTop="5dp"
                android:id="@+id/spinner_gejala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_hasil"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gejala : -" />

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:text="Pengendalian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinner_pengendalian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_hasil_pengendalian"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengendalian : -" />

            <Button
                android:id="@+id/btnSave"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Simpan"
                android:padding="15dp"
                android:textColor="#fff"
                android:background="@drawable/input_background"
                android:textSize="15dp"
                android:textAllCaps="false"/>


        </LinearLayout>

    </LinearLayout>

    </ScrollView>
</RelativeLayout>